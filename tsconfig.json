{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@src/*": ["src/*"],
      "@pages/*": ["src/pages/*"],
      "@core/*": ["src/core/*"],
      "@model/*": ["src/core/model/*"],
      "@utils/*": ["src/core/utils/*"],
      "@public/*": ["public/*"],
    },
  },
  "include": ["src"]
}
